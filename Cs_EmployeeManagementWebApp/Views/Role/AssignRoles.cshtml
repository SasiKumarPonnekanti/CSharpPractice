@model Cs_EmployeeManagementWebApp.Models.UserInRole
@{
    ViewData["Title"] = "AssignRoles";
}

<h1>AssignRoles</h1>
<h1>Assign Role to User</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRoles">
            <h4>@ViewBag.Message</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control"
                asp-items="@ViewBag.Users"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control"
                 asp-items="@ViewBag.Roles"></select>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
             
            <div class="form-group">
                <input type="submit" value="AssignRoles" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


